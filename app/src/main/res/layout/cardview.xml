<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/dimen5"
    android:layout_marginRight="@dimen/dimen5"
    android:layout_marginTop="@dimen/dimen10"
    android:layout_marginBottom="@dimen/dimen10"
    app:cardCornerRadius="@dimen/dimen8">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:padding="@dimen/dimen10">

        <!-- foto produk -->
        <ImageView
            android:id="@+id/foto"
            android:layout_width="@dimen/dimen100"
            android:layout_height="@dimen/dimen100"
            android:layout_marginRight="@dimen/dimen15"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/dimen15"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Nama Produk -->
                <TextView
                android:id="@+id/nama"
                android:fontFamily="@font/poppins_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                    android:textColor="@color/colorJudul"
                    android:paddingBottom="@dimen/dimen2"
                android:textSize="@dimen/font16"/>

                <!-- Harga Produk -->
                <TextView
                    android:id="@+id/harga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/colorDesc"
                    android:paddingBottom="@dimen/dimen1"
                    android:textStyle="bold"
                    />

                <!-- Alamat -->
                <TextView
                android:id="@+id/alamat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/colorDesc"
                    android:textSize="14sp" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>