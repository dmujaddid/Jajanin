<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dimen5"
    android:layout_marginRight="@dimen/dimen5"
    android:layout_marginTop="@dimen/dimen10"
    android:layout_marginBottom="@dimen/dimen10">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:padding="@dimen/dimen10">

        <!-- foto produk/merchant -->
        <ImageView
            android:id="@+id/foto"
            android:layout_width="@dimen/dimen100"
            android:layout_height="@dimen/dimen100"
            android:layout_marginRight="@dimen/dimen15"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/dimen15"

            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Nama Merchant/Produk -->
                <TextView
                android:id="@+id/nama"
                android:fontFamily="@font/poppins_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen14"
                    />

                <TextView
                    android:id="@+id/harga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dimen11"
                    android:textStyle="bold"
                    />

                <!-- Alamat -->
                <TextView
                android:id="@+id/alamat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                    android:textSize="@dimen/dimen11" />

            </LinearLayout>

            <LinearLayout

            android:layout_width="@dimen/dimen60"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dimen10"
            android:layout_marginStart="@dimen/dimen10"
                >

                <Button
                    android:id="@+id/chat"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen40"
                    android:visibility="invisible"
                    android:text="@string/chat"
                    android:textSize="@dimen/dimen10"/>

             </LinearLayout>



        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>